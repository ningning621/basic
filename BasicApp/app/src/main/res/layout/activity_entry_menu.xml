<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#c2d2cf"
    tools:context="com.example.ningning.basicapp.EntryMenu">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:id="@+id/back3"
            android:background="#ffc5b9"
            android:text="Back"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fbfbfb"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />

        <Space
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            tools:targetApi="ice_cream_sandwich" />
    </TableRow>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Create:"
            android:textSize="70sp"
            android:id="@+id/menutitle"
            android:textColor="#fbfbfb"
            android:layout_below="@id/back3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Text"
            android:id="@+id/addText"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fbfbfb"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/menutitle"
            android:background="#f9d3bb"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Ratings"
            android:id="@+id/addRatings"
            android:layout_below="@id/addText"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fbfbfb"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#f9d3bb"/>



</LinearLayout>
